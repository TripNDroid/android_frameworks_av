    ],

    cflags: [
        "-Werror",
        "-Wall",
        "-Wno-unused-parameter",
        "-Wno-documentation",
    ],

    product_variables: {
        tripndroid: {
            uses_qcom_hardware: {
                cflags: ["-DQCOM_HARDWARE"],
            },
        },
    },

    sanitize: {
        misc_undefined: [
            "signed-integer-overflow",
            "unsigned-integer-overflow",
