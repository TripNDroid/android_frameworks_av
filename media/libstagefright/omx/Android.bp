cc_library_shared {
    name: "libstagefright_omx",
    vendor_available: true,
    vndk: {
        enabled: true,
    },

    srcs: [
        "FrameDropper.cpp",
        "GraphicBufferSource.cpp",
        "BWGraphicBufferSource.cpp",
        "FFMPEGSoftCodec.cpp",
        "OMX.cpp",
        "OMXStore.cpp",
